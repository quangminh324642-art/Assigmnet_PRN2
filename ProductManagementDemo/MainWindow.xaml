<Window x:Class="ProductManagementDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductManagementDemo"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Title="Product Management"
        Height="670"
        Width="1007">
    <Grid>
        <!-- Nền màu cam nhạt tổng thể -->
        <Grid.Background>
            <SolidColorBrush Color="#FFF3E0"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Tiêu đề -->
            <RowDefinition Height="Auto"/>
            <!-- Các trường nhập liệu -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="80"/>
            <!-- Các nút chức năng -->
        </Grid.RowDefinitions>

        <!-- Thanh tiêu đề màu cam đậm -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#FF9800" VerticalAlignment="Stretch">
            <Label Content="PRODUCT MANAGEMENT"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="36"
                   Foreground="White"
                   FontWeight="Bold" />
        </Border>

        <!-- Phần nhập liệu và DataGrid -->
        <Grid Grid.Row="1" Grid.RowSpan="2" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <!-- Label -->
                <ColumnDefinition Width="*"/>
                <!-- Input -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Các label + textbox -->
            <Label Content="Product ID" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Foreground="#333333" FontSize="14"/>
            <TextBox x:Name="txtProductID" Grid.Row="0" Grid.Column="1" IsEnabled="False" Margin="5" Padding="5" BorderBrush="#FFB74D" BorderThickness="1" VerticalContentAlignment="Center"/>

            <Label Content="Product Name" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Foreground="#333333" FontSize="14"/>
            <TextBox x:Name="txtProductName" Grid.Row="1" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#FFB74D" BorderThickness="1" VerticalContentAlignment="Center"/>

            <Label Content="Price" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Foreground="#333333" FontSize="14"/>
            <TextBox x:Name="txtPrice" Grid.Row="2" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#FFB74D" BorderThickness="1" VerticalContentAlignment="Center"/>

            <Label Content="Units In Stock" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Foreground="#333333" FontSize="14"/>
            <TextBox x:Name="txtUnitsInStock" Grid.Row="3" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#FFB74D" BorderThickness="1" VerticalContentAlignment="Center"/>

            <Label Content="Category" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Foreground="#333333" FontSize="14"/>
            <ComboBox x:Name="cboCategory" Grid.Row="4" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#FFB74D" BorderThickness="1" VerticalContentAlignment="Center"/>

            <!-- DataGrid hiển thị sản phẩm -->
            <DataGrid x:Name="dgData" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,20,5,0"
                      AutoGenerateColumns="False"
                      SelectionChanged="dgData_SelectionChanged"
                      AlternatingRowBackground="#FFFDE7"
                      RowBackground="White"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      BorderBrush="#FFB74D"
                      BorderThickness="1">
                <DataGrid.Resources>
                    <!-- Di chuyển Style CenteredColumnStyle vào DataGrid.Resources -->
                    <Style x:Key="CenteredColumnStyle" TargetType="{x:Type TextBlock}">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>

                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#FFECB3" />
                        <Setter Property="Foreground" Value="#333333" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product ID" Binding="{Binding ProductID}" Width="0.8*"  ElementStyle="{StaticResource CenteredColumnStyle}" />
                    <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="2*" ElementStyle="{StaticResource CenteredColumnStyle}" />
                    <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice}" Width="*" ElementStyle="{StaticResource CenteredColumnStyle}" />
                    <DataGridTextColumn Header="Units In Stock" Binding="{Binding UnitsInStock}" Width="*" ElementStyle="{StaticResource CenteredColumnStyle}" />
                    <DataGridTextColumn Header="Category" Binding="{Binding Category.CategoryName}" Width="*" ElementStyle="{StaticResource CenteredColumnStyle}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Các nút chức năng -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnCreate" Content="Create" Width="120" Height="45" Margin="15,0"
                    Background="#2196F3" Foreground="White" FontWeight="Bold" FontSize="16" Click="btnCreate_Click"
                    BorderThickness="0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="btnUpdate" Content="Update" Width="120" Height="45" Margin="15,0"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" FontSize="16" Click="btnUpdate_Click"
                    BorderThickness="0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="btnDelete" Content="Delete" Width="120" Height="45" Margin="15,0"
                    Background="#FFC107" Foreground="White" FontWeight="Bold" FontSize="16" Click="btnDelete_Click"
                    BorderThickness="0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFA000"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="btnClose" Content="Close" Width="120" Height="45" Margin="15,0"
                    Background="#F44336" Foreground="White" FontWeight="Bold" FontSize="16" Click="btnClose_Click"
                    BorderThickness="0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D32F2F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>